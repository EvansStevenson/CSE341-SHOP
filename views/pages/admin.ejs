<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin</title>
    <link rel="stylesheet" href="/css/home.css">
</head>

<body>
    <ul>
        <li><a href="./">Home</a></li>
        <li><a href="./shop">Armory</a></li>

        <% if (!isAuth){ %> 
        <li><a href="./auth">Sign In</a></li>
        <% } %> 

        <% if (isAuth){ %> 
        <li><a class="active" href="./admin">Admin</a></li>
        <li><a href="">Cart</a></li>
       <form action="auth/logout" method="POST">
         <button type="submit">Logout</button>
       </form>
        <% } %> 
      </ul>

    <div style="margin-left:25%;padding:1px 16px;height:1000px;">
        <form action="/admin/submit" method="POST">
            <input type="text" placeholder="Title" name="title">
            <input type="text" placeholder="Discription" name="description">
            <input type="text" step="0.01" placeholder="pirce" name="price">
            <select name="tag">
                <option value="sword">Sword</option>
                <option value="bow">Bow</option>
                <option value="shield">Shield</option>
                <option value="armor">Armor</option>
            </select>
            <input type="text" placeholder="imgUrl" name="imgUrl">
            <input type="submit">
        </form>

        <% prods.forEach (prods => { %>
        <a href="../admin/<%= prods._id %>" style="text-decoration: none;">
            <div>
                
                <h1 class="display-4"><%= prods.title %></h1>
                <img src="<%= prods.imgUrl %>" style='max-width: 150px'>
                <p>$<%= prods.price %></p>
            </div>
        </a>
        <% }) %>
    </div>
</body>

</html>

