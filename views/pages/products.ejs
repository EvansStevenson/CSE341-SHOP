<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products</title>
    <link rel="stylesheet" href="/css/home.css">
    <style>
        li a.shop {
            background-color: rgb(74, 74, 211);
            color: white;
        }
    </style>
<%- include('../includes/head.ejs')%>
</head>

<body>
    <%- include('../includes/nav.ejs', {active: "active"}, {notActive: ""}) %>

    <div class="row" style="margin-left:25%;padding:1px 16px;height:1000px;">
        <% prods.forEach (prods => { %>
        <% if (prods.tag === 'sword') { %>
        <a class="col-sm-4 col-md-4 col-4 mt-3 border border-info " href="../shop/<%= prods._id %>" style="text-decoration: none;">
            <div>
                <h3><%= prods.title %></h3>
                <img src="<%= prods.imgUrl %>" style='max-width: 150px'>
                <p>$<%= prods.price %></p>
                <% if (isAuth){ %>
                <%- include('../includes/addToCart.ejs', {product: prods._id}) %>
                <% } %>
            </div>
        </a>
        <% } %>
        <% }) %>
        <% prods.forEach (prods => { %>
            <% if (prods.tag === 'bow') { %>
            <a class="col-sm-4 col-md-4 col-4 mt-3 border border-info" href="../shop/<%= prods._id %>" style="text-decoration: none;">
                <div>
                    <h3><%= prods.title %></h3>
                    <img src="<%= prods.imgUrl %>" style='max-width: 150px'>
                    <p>$<%= prods.price %></p>
                    <% if (isAuth){ %>
                    <%- include('../includes/addToCart.ejs', {product: prods._id}) %>
                    <% } %>
                </div>
            </a>
            <% } %>
            <% }) %>
            <% prods.forEach (prods => { %>
                <% if (prods.tag === 'shield') { %>
                <a class="col-sm-4 col-md-4 col-4 mt-3 border border-info " href="../shop/<%= prods._id %>" style="text-decoration: none;">
                    <div>
                        <h3><%= prods.title %></h3>
                        <img src="<%= prods.imgUrl %>" style='max-width: 150px'>
                        <p>$<%= prods.price %></p>
                        <% if (isAuth){ %>
                        <%- include('../includes/addToCart.ejs', {product: prods._id}) %>
                        <% } %>
                    </div>
                </a>
                <% } %>
                <% }) %>
                <% prods.forEach (prods => { %>
                    <% if (prods.tag === 'armor') { %>
                    <a class="col-sm-4 col-md-4 col-4 mt-3 border border-info " href="../shop/<%= prods._id %>" style="text-decoration: none;">
                        <div>
                            <h3><%= prods.title %></h3>
                            <img src="<%= prods.imgUrl %>" style='max-width: 150px'>
                            <p>$<%= prods.price %></p>
                            <% if (isAuth){ %>
                            <%- include('../includes/addToCart.ejs', {product: prods._id}) %>
                            <% } %>
                        </div>
                    </a>
                    <% } %>
                    <% }) %>
    </div>

</body>

</html>